{
  "name": "react-native-my-components",
  "description": "Styled components",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "react-native": "./src/index.ts",
  "scripts": {
    "dev": "tsup --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "prepare": "tsup"
  },
  "devDependencies": {
    "@testing-library/react-native": "*",
    "@types/jest": "*",
    "@types/react": "*",
    "babel-jest": "*",
    "eslint-config-my": "*",
    "react-test-renderer": "*",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@shopify/flash-list": "*",
    "@storybook/react": "*",
    "@storybook/react-native": "*",
    "expo-file-system": "*",
    "react": "*",
    "react-dom": "*",
    "react-native": "*",
    "react-native-file-viewer": "*",
    "react-native-my-text": "*",
    "react-native-unistyles": "*"
  },
  "jest": {
    "preset": "jest-expo",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "setupFiles": [
      "./jest-setup.ts"
    ]
  },
  "eslintConfig": {
    "extends": [
      "my"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "dependencies": {
    "react-native-my-hooks": "*",
    "react-native-my-text": "*",
    "react-native-unstyled-components": "*"
  }
}
