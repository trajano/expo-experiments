{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@sb/*": ["./.storybook/*"]
    },
    "moduleResolution": "Bundler",
    "checkJs": true
  },
  "include": [
    ".storybook/*.ts",
    ".storybook/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "metro.config.js"
  ]
}
