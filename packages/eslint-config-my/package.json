{
  "name": "eslint-config-my",
  "description": "My ESLint config",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsup --watch",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "prepare": "tsup"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.12 <9",
    "@types/jest": "*",
    "babel-jest": "*",
    "eslint": "^8.57.1 <9",
    "jest": "*",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "eslint-config-expo": "^7.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-turbo": "^2.3.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-prefer-arrow": "^1.2.3"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "eslintConfig": {
    "extends": [
      "."
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ]
}
