{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "expo",
      "request": "attach",
      "name": "Debug Expo app",
      "projectRoot": "${workspaceFolder}/packages/my-app",
      "bundlerPort": "8081",
      "bundlerHost": "127.0.0.1",
      "enableTurboSourcemaps": true
    },
    {
      "type": "node-terminal",
      "name": "Run Script: lint",
      "request": "launch",
      "command": "npm run lint",
      "cwd": "${workspaceFolder}"
    }
  ]
}
